.slot {
    width: 96px;
    height: 96px;
    background-color: rgba(0, 0, 0, 0);
    -unity-background-image-tint-color: rgba(0, 0, 0, 0.8);
    justify-content: center;
    align-items: center;
    border-width: 0;
    transition-duration: 0.8s;
    transition-timing-function: ease-in-out;
    position: relative;
    margin: 0;
}

.slot:hover {
    -unity-background-image-tint-color: rgb(172, 172, 172);
    transition-duration: 0.1s;
}

.item-slot-sprite {
    width: 50%;
    height: 50%;
    border-color: rgb(255, 255, 255);
}

.unity-button {
    padding: 0;
    border-radius: 50%;
}
